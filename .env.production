# Production Environment Configuration
# Copy this to .env and update with your production values

# FMP API Configuration
FMP_API_KEY=your_production_api_key_here
FMP_RATE_LIMIT_PER_MINUTE=2800
FMP_RATE_LIMIT_PER_DAY=25000

# PostgreSQL Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fmpdata
DB_USER=fmp_prod_user
DB_PASSWORD=strong_production_password_here
DB_MAX_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30000

# Redis Cache Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600
REDIS_MAX_RETRIES=3

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
LOG_DIR=/app/logs
DATA_DIR=/app/data

# Health Monitoring
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000
ALERT_EMAIL=alerts@yourcompany.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Performance Tuning
BATCH_SIZE=100
PARALLEL_WORKERS=4
RETRY_ATTEMPTS=3
RETRY_DELAY=5000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Security
API_KEY_ROTATION_DAYS=90
ENABLE_SSL=true
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=fmp-backups
AWS_REGION=us-east-1

# Monitoring (Optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_password_here
PGADMIN_EMAIL=admin@yourcompany.com
PGADMIN_PASSWORD=secure_password_here

# Feature Flags
ENABLE_OPTIONS_DATA=false
ENABLE_CRYPTO_DATA=true
ENABLE_GOVERNMENT_DATA=true
ENABLE_ESG_DATA=true
ENABLE_REAL_TIME_QUOTES=true

# Update Schedules (cron format)
SCHEDULE_INCREMENTAL="0 * * * *"      # Every hour
SCHEDULE_EXTENDED="0 6,18 * * *"      # 6 AM and 6 PM
SCHEDULE_FULL="0 2 * * 0"             # Sunday 2 AM
SCHEDULE_CLEANUP="0 3 * * *"          # Daily 3 AM

# Resource Limits
MAX_MEMORY_MB=4096
MAX_CPU_PERCENT=80
MAX_DISK_USAGE_PERCENT=90

# Notification Settings
NOTIFY_ON_ERROR=true
NOTIFY_ON_SUCCESS=false
NOTIFY_ON_WARNING=true
NOTIFICATION_CHANNELS=email,slack

# Data Retention
RETENTION_INTRADAY_DAYS=30
RETENTION_DAILY_DAYS=365
RETENTION_NEWS_DAYS=90
RETENTION_LOGS_DAYS=30